{
    "compilerOptions": {
        "outDir": "./lib",
        "baseUrl": "./src",
        "declaration": true,
        "target": "esnext",
        "lib": [
            "esnext"
        ],
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "src",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}